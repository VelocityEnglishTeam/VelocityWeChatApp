<!-- 幻灯片模版 -->
<!-- swiper_scroll_tmpl -->
<template name="swiper_scroll_tmpl">
  <swiper class="swiper" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" bindchange="swiperchange">
    <block wx:for="{{images}}" wx:key="item.id">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</template>
<!-- 听说读写四个窗口用的模版 -->
<!-- index_index_navs -->
<template name="index_index_navs_tmpl">
  <block wx:for="{{navs}}" wx:key="item.id">
    <view class="l-c-c" catchtap="go" data-type="{{item.text}}">
      <image src="{{item.image}}" class="slide-image" />
      <text>{{item.text}}</text>
    </view>
  </block>
</template>